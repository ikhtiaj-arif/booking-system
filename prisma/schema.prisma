// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // url      = env("DATABASE_URL")
  url      = "file:app.db"
}

model Booking {
  id          String   @id @default(uuid())
  resource    String
  startTime   DateTime
  endTime     DateTime
  requestedBy String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("bookings")
}